<views:MvxWpfView x:Class="TitheSync.UI.Components.NotificationPane"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:panes="clr-namespace:TitheSync.Core.ViewModels.Panes;assembly=TitheSync.Core"
                  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                  d:DataContext="{d:DesignInstance Type=panes:NotificationPaneViewModel,
                                                   IsDesignTimeCreatable=True}"
                  d:DesignHeight="auto"
                  d:DesignWidth="auto"
                  FontFamily="Raleway"
                  mc:Ignorable="d">
    <Border Background="{DynamicResource SecondaryBackgroundColor}" CornerRadius="8">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid Margin="15,0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <!--  The label of the view  -->
                <Label HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Content="Notifications"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryTextColor}" />

                <TextBlock Grid.Column="1"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Foreground="{DynamicResource PrimaryTextColor}"
                           Text="Clear All" />

                <Button Grid.Column="2"
                        Width="32"
                        Height="32"
                        Margin="4,0,0,0"
                        HorizontalAlignment="Right"
                        Command="{Binding ClearCommand}"
                        Style="{StaticResource DelBtn}">
                    <iconPacks:PackIconMaterial Kind="NotificationClearAll" Style="{StaticResource IconButtonIcon}" />
                </Button>
            </Grid>


            <ListBox Grid.Row="1"
                     Background="Transparent"
                     ItemsSource="{Binding Notifications}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="5"
                                Background="{DynamicResource TertiaryBackgroundColor}"
                                CornerRadius="5">
                            <Grid>
                                <TextBlock Height="25"
                                           Padding="3"
                                           VerticalAlignment="Center"
                                           FontFamily="Raleway"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TertiaryTextColor}"
                                           Text="{Binding Message}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Border>
</views:MvxWpfView>