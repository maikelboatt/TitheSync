<views:MvxWpfView x:Class="TitheSync.UI.Components.ChartPane"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:loadingSpinnerControl="clr-namespace:LoadingSpinnerControl;assembly=LoadingSpinnerControl"
                  xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:panes="clr-namespace:TitheSync.Core.ViewModels.Panes;assembly=TitheSync.Core"
                  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                  d:DataContext="{d:DesignInstance Type=panes:ChartPaneViewModel,
                                                   IsDesignTimeCreatable=True}"
                  d:DesignHeight="auto"
                  d:DesignWidth="auto"
                  FontFamily="Raleway"
                  mc:Ignorable="d">
    <views:MvxWpfView.Resources>
        <BooleanToVisibilityConverter x:Key="ToVisibilityConverter" />
    </views:MvxWpfView.Resources>

    <Grid>

        <loadingSpinnerControl:LoadingSpinner Diameter="100"
                                              IsLoading="{Binding IsLoading}"
                                              Thickness="3" />

        <StackPanel VerticalAlignment="Center" Visibility="{Binding IsLoading, Converter={StaticResource ToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}">
            <TextBlock Margin="0,10"
                       FontFamily="Amita"
                       Text="Waiting for response from the database...."
                       TextAlignment="Center" />
        </StackPanel>

        <Grid Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Pie-Chart  -->
            <Border Margin="20"
                    BorderBrush="{StaticResource TertiaryBackgroundColor}"
                    CornerRadius="7.5">
                <Border Background="{DynamicResource PrimaryBackgroundColor}" CornerRadius="7.5">
                    <!--  BorderBrush="{StaticResource PrimaryBackgroundColor}">  -->
                    <Grid>
                        <lvc:PieChart AnimationsSpeed="00:00:00.500"
                                      InitialRotation="90"
                                      LegendPosition="Bottom"
                                      LegendTextPaint="{DynamicResource LegendTextPaint}"
                                      Series="{Binding Series}" />
                    </Grid>

                </Border>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="3"
                                      ShadowDepth="3"
                                      Color="Gray" />
                </Border.Effect>
            </Border>
            <!--  End Pie-Chart  -->

            <!--  Bible Class Amount Summary  -->
            <Border Grid.Row="0"
                    Grid.Column="1"
                    Margin="20"
                    BorderBrush="{StaticResource TertiaryBackgroundColor}"
                    CornerRadius="7.5">
                <Border Background="{DynamicResource PrimaryBackgroundColor}" CornerRadius="7.5">
                    <Grid>
                        <ListBox Background="Transparent" ItemsSource="{Binding Messages}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="5"
                                            Background="{DynamicResource TertiaryBackgroundColor}"
                                            CornerRadius="5">
                                        <Grid>
                                            <TextBlock Height="20"
                                                       Padding="3,2"
                                                       VerticalAlignment="Center"
                                                       FontFamily="Abyssinica SIL"
                                                       FontSize="13"
                                                       FontWeight="Medium"
                                                       Foreground="{DynamicResource TertiaryTextColor}"
                                                       Text="{Binding}" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="3"
                                      ShadowDepth="3"
                                      Color="Gray" />
                </Border.Effect>
            </Border>

            <!--  Top ten payers in current-quarter  -->
            <Border Grid.Row="1"
                    Grid.Column="0"
                    Margin="20"
                    BorderBrush="{StaticResource TertiaryBackgroundColor}"
                    CornerRadius="7.5">
                <Border Background="{DynamicResource PrimaryBackgroundColor}" CornerRadius="7.5">
                    <Grid>
                        <ListBox Background="Transparent" ItemsSource="{Binding TopTenPayersInCurrentQuarter}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="5"
                                            Background="{DynamicResource TertiaryBackgroundColor}"
                                            CornerRadius="5">
                                        <Grid>
                                            <TextBlock Height="20"
                                                       Padding="3,2"
                                                       VerticalAlignment="Center"
                                                       FontFamily="Abyssinica SIL"
                                                       FontSize="13"
                                                       FontWeight="Medium"
                                                       Foreground="{DynamicResource TertiaryTextColor}"
                                                       Text="{Binding}" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="3"
                                      ShadowDepth="3"
                                      Color="Gray" />
                </Border.Effect>
            </Border>
        </Grid>
    </Grid>
</views:MvxWpfView>