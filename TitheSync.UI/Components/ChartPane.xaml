<views:MvxWpfView x:Class="TitheSync.UI.Components.ChartPane"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                  xmlns:loadingSpinnerControl="clr-namespace:LoadingSpinnerControl;assembly=LoadingSpinnerControl"
                  xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:panes="clr-namespace:TitheSync.Core.ViewModels.Panes;assembly=TitheSync.Core"
                  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                  d:DataContext="{d:DesignInstance Type=panes:ChartPaneViewModel,
                                                   IsDesignTimeCreatable=True}"
                  d:DesignHeight="auto"
                  d:DesignWidth="auto"
                  FontFamily="Raleway"
                  mc:Ignorable="d">
    <!--  Resources for value converters  -->
    <views:MvxWpfView.Resources>
        <BooleanToVisibilityConverter x:Key="ToVisibilityConverter" />
    </views:MvxWpfView.Resources>

    <Grid>
        <!--  Loading spinner shown when IsLoading is true  -->
        <loadingSpinnerControl:LoadingSpinner Diameter="100"
                                              IsLoading="{Binding IsLoading}"
                                              Thickness="3" />

        <!--  Waiting message shown when IsLoading is true  -->
        <StackPanel VerticalAlignment="Center" Visibility="{Binding IsLoading, Converter={StaticResource ToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}">
            <TextBlock Margin="0,10"
                       FontFamily="Amita"
                       Text="Waiting for response from the database...."
                       TextAlignment="Center" />
        </StackPanel>

        <!--  Main content grid, visible when IsLoading is false  -->
        <Grid Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Pie Chart Section  -->
            <Border Margin="20"
                    BorderBrush="{StaticResource TertiaryBackgroundColor}"
                    CornerRadius="7.5">
                <Border Background="{DynamicResource PrimaryBackgroundColor}" CornerRadius="7.5">
                    <Grid>
                        <!--  Pie chart bound to Series property in ViewModel  -->
                        <lvc:PieChart AnimationsSpeed="00:00:00.500"
                                      InitialRotation="90"
                                      LegendPosition="Bottom"
                                      LegendTextPaint="{DynamicResource LegendTextPaint}"
                                      Series="{Binding Series}" />
                    </Grid>
                </Border>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="3"
                                      ShadowDepth="3"
                                      Color="Gray" />
                </Border.Effect>
            </Border>
            <!--  End Pie Chart Section  -->

            <!--  Bible Class Amount Summary Section  -->
            <Border Grid.Row="0"
                    Grid.Column="1"
                    Margin="20"
                    BorderBrush="{StaticResource TertiaryBackgroundColor}"
                    CornerRadius="7.5">
                <Border Background="{DynamicResource PrimaryBackgroundColor}" CornerRadius="7.5">
                    <Grid>
                        <!--  List of summary messages  -->
                        <ListBox Background="Transparent" ItemsSource="{Binding Messages}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="5"
                                            Background="{DynamicResource TertiaryBackgroundColor}"
                                            CornerRadius="5">
                                        <Grid>
                                            <TextBlock Height="20"
                                                       Padding="3,2"
                                                       VerticalAlignment="Center"
                                                       FontFamily="Abyssinica SIL"
                                                       FontSize="13"
                                                       FontWeight="Medium"
                                                       Foreground="{DynamicResource TertiaryTextColor}"
                                                       Text="{Binding}" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="3"
                                      ShadowDepth="3"
                                      Color="Gray" />
                </Border.Effect>
            </Border>
            <!--  End Bible Class Amount Summary Section  -->

            <!--  Top Ten Payers in Current Quarter Section  -->
            <Border Grid.Row="1"
                    Grid.Column="0"
                    Margin="20"
                    BorderBrush="{StaticResource TertiaryBackgroundColor}"
                    CornerRadius="7.5">
                <Border Background="{DynamicResource PrimaryBackgroundColor}" CornerRadius="7.5">
                    <Grid>
                        <!--  List of top ten payers  -->
                        <ListBox Background="Transparent" ItemsSource="{Binding TopTenPayersInCurrentQuarter}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="5"
                                            Background="{DynamicResource TertiaryBackgroundColor}"
                                            CornerRadius="5">
                                        <Grid>
                                            <TextBlock Height="20"
                                                       Padding="3,2"
                                                       VerticalAlignment="Center"
                                                       FontFamily="Abyssinica SIL"
                                                       FontSize="13"
                                                       FontWeight="Medium"
                                                       Foreground="{DynamicResource TertiaryTextColor}"
                                                       Text="{Binding}" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="3"
                                      ShadowDepth="3"
                                      Color="Gray" />
                </Border.Effect>
            </Border>
            <!--  End Top Ten Payers Section  -->

            <!--  Navigation Buttons Section  -->
            <Border Grid.Row="1"
                    Grid.Column="1"
                    Margin="20"
                    BorderBrush="{StaticResource TertiaryBackgroundColor}"
                    CornerRadius="7.5">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                    <!--  Button to open Bible Class Compare Dialog  -->
                    <StackPanel Margin="5" Orientation="Horizontal">
                        <Button Margin="5,0"
                                Command="{Binding OpenBibleClassCompareDialogCommand}"
                                Style="{StaticResource NavigateBtn}">
                            <iconPacks:PackIconMaterial Width="75"
                                                        Kind="ArrowRightBoldCircleOutline"
                                                        Style="{StaticResource IconButtonIcon}" />
                        </Button>
                        <TextBlock FontFamily="Abyssinica SIL"
                                   FontSize="13"
                                   Text="Compare Payments for Bible Classes"
                                   TextAlignment="Center" />
                    </StackPanel>

                    <!--  Button to open Member Compare Dialog  -->
                    <StackPanel Margin="5" Orientation="Horizontal">
                        <Button Margin="5,0"
                                Command="{Binding OpenMemberCompareDialogCommand}"
                                Style="{StaticResource NavigateBtn}">
                            <iconPacks:PackIconMaterial Width="75"
                                                        Kind="ArrowRightBoldCircleOutline"
                                                        Style="{StaticResource IconButtonIcon}" />
                        </Button>
                        <TextBlock FontFamily="Abyssinica SIL"
                                   FontSize="13"
                                   Text="Compare Payments for Members"
                                   TextAlignment="Center" />
                    </StackPanel>

                </StackPanel>
            </Border>
            <!--  End Navigation Buttons Section  -->

        </Grid>
    </Grid>
</views:MvxWpfView>