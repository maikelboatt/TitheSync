<views:MvxWpfView x:Class="TitheSync.UI.Resources.CustomComboBox"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                  x:Name="Root"
                  d:DesignHeight="auto"
                  d:DesignWidth="auto"
                  mc:Ignorable="d">
    <StackPanel Margin="20,10">
        <TextBlock Margin="0,0,0,8"
                   FontSize="13"
                   Foreground="{DynamicResource SecondaryTextColor}"
                   Text="{Binding ElementName=Root, Path=Placeholder}" />

        <Grid>
            <ComboBox Height="30"
                      VerticalAlignment="Center"
                      Background="Transparent"
                      BorderThickness="0,0,1,1"
                      FontSize="15"
                      FontStyle="Italic"
                      FontWeight="Medium"
                      ItemsSource="{Binding ElementName=Root, Path=Data}"
                      SelectedIndex="0"
                      SelectedItem="{Binding ElementName=Root, Path=ChosenValue, Mode=TwoWay}" />
        </Grid>

    </StackPanel>
</views:MvxWpfView>