<views:MvxWpfView x:Class="TitheSync.UI.Forms.Payments.BatchPaymentForm"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                  d:DesignHeight="300"
                  d:DesignWidth="300"
                  mc:Ignorable="d">
    <StackPanel>
        <TextBlock FontSize="16"
                   FontWeight="Bold"
                   Text="Batch Payment" />
        <TextBlock Text="Payment Date:" />
        <DatePicker SelectedDate="{Binding PaymentDate}" />
        <TextBlock Margin="0,10,0,0"
                   FontWeight="Bold"
                   Text="Payments:" />
        <ItemsControl ItemsSource="{Binding MemberPayments}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                        <TextBlock Width="150"
                                   VerticalAlignment="Center"
                                   Text="{Binding Member.FullName}" />
                        <TextBox Width="100"
                                 Margin="10,0,0,0"
                                 Text="{Binding PaymentAmount, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Button Margin="0,10,0,0"
                Command="{Binding SubmitBatchPaymentCommand}"
                Content="Submit" />
    </StackPanel>
</views:MvxWpfView>