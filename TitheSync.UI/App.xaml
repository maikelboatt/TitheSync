<!--
    App.xaml: Defines the main application class for the WPF application.
    This file sets up the application resources, including styles, themes, and icons.
-->

<views:MvxApplication x:Class="TitheSync.UI.App"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:resources="clr-namespace:TitheSync.UI.Resources"
                      xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf">
    <!--
        Application Resources:
        - Merged dictionaries include styles, themes, and icons used throughout the application.
    -->
    <views:MvxApplication.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  Basic styles for the application  -->
                <ResourceDictionary Source="Styles/BasicStyle.xaml" />
                <ResourceDictionary Source="Styles/ButtonStyle.xaml" />
                <ResourceDictionary Source="Styles/Colors.xaml" />
                <ResourceDictionary Source="Styles/CommonCtrls.xaml" />
                <ResourceDictionary Source="Styles/DataGridStyles.xaml" />
                <!--  Dark theme resources  -->
                <ResourceDictionary Source="Themes/LightTheme.xaml" />
                <!--  Icon resources  -->
                <ResourceDictionary Source="Assets/Icons/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <resources:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
            <resources:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <resources:RadioButtonConverter x:Key="RadioButtonConverter" />
        </ResourceDictionary>
    </views:MvxApplication.Resources>
</views:MvxApplication>